
<div class="container">
    <div class="row">
        {% if foundArticle is not null %}
            {{ include('Grunt/content/post.html.twig') }}
        {% else %}
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                {% for articleMain in Main if articleMain.postCategory in app.request.uri %}
                    <div class="post-preview">
                            <h2 class="post-title">
                                <h3><strong>{{ articleMain.PostTitle }}</strong></h3>
                            </h2>
                            <h4 class="post-subtitle">
                                {{ articleMain.postData|truncate(400)|raw }}
                            </h4>
                        <p>
                            <a href="{{ path('grunt', {'pagina' : articleMain.postCategory, 'id' : articleMain.id }) }}">
                                <button class="btn btn-default">mai mult</button>
                            </a>
                        </p>
                        <p class="post-meta">Scris maiastru in anul domnului: {{ articleMain.ArticleDate|date('Y M') }}</p>
                    </div>
                    <hr>
                {% endfor %}
                <!-- Pager -->
                <ul class="pager">
                    <li class="next">
                        {{ knp_pagination_render(Main) }}
                    </li>
                </ul>
            </div>

        {%  endif %}
    </div>
</div>

<hr>

