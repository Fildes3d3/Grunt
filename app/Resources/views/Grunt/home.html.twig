{% extends '::base.html.twig' %}
{% block body %}
    {{ parent() }}
        {% for flashMessage in app.session.flashbag.get('succes') %}
            <div class="panel-heading">
                <div class="alert alert-success alert-dismissable" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h2>{{ flashMessage }}</h2>
                </div>
            </div>
        {% endfor %}
        <div class="row">
    {% if app.request.attributes.get('_route') == 'security_login'%}

    {% else %}
            <div class="col-md-3">
                {% for articleMain in Main %}
                <h3>{{ articleMain.PostTitle }}</h3>
                <div class="media">
                    <button type="button" class="img-thumbnail pull-left" data-toggle="modal" data-target="#picmodal">
                        <img src="{{ asset ('upload/' ~ articleMain.Picture) }}" alt="{{ articleMain.PictureCaption }}" />
                    </button>

                    <div class="modal fade" role="dialog" aria-hidden="true" id="picmodal">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                    <h4 class="modal-title" id="myModalLabel">{{ articleMain.PictureCaption }}</h4>
                                </div>
                                <div class="modal-body">
                                    <img src="{{ asset ('upload/' ~ articleMain.Picture) }}" alt="{{ articleMain.PictureCaption }}" />
                                </div>
                                <div class="modal-footer">
                                    <h5><em>{{ articleMain.PictureCaption }}</em></h5>
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="media-body">
                        <p><strong>{{ articleMain.articleCaption }}</strong></p>
                        <p><em>{{ articleMain.postData|truncate(200, true) }}</em></p>
                        <p><em><strong>Scris maiastru in anul domnului: {{ articleMain.ArticleDate|date('Y') }}</strong></em></p>
                        <a href="#" class="btn btn-info">Citeste mai departe...</a>
                    </div>
                </div>
                {% endfor %}
            </div>

