{% extends '::base.html.twig' %}
{% block body %}
{{ parent() }}
    {% for flashMessage in app.session.flashbag.get('succes') %}
        <div class="panel-heading">
            <div class="alert alert-success alert-dismissable" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                    <h2>{{ flashMessage }}</h2>
            </div>
        </div>
    {% endfor %}
         <div class="row">
            {% if app.request.attributes.get('_route') != 'security_login'%}
            <div class="col-md-9 home">
                {% for articleMain in Main %}
                <a href="{{ path('grunt', {'pagina' : articleMain.postCategory, 'id' : articleMain.id }) }}">
                <h2>{{ articleMain.PostTitle }}</h2>
                <div class="media">
                    <div class="media-body">
                        <p><em>{{ articleMain.postData|truncate(400, true)|raw }}</em></p>
                        <p><em><strong>Scris maiastru in anul domnului: {{ articleMain.ArticleDate|date('Y') }}</strong></em></p>
                        <button class="btn btn-info" > Citeste mai departe...</button>
                    </div>
                </div>
                </a>
                    <hr>
                {% endfor %}
            </div>

            <div class="col-md-3" id="side_main">
                <h2>Arhiva</h2>
                <ul>

                    <li class="response">
                        <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                            <div class="panel panel-default">
                                <div class="panel-heading" role="tab" id="headingOne">
                                    <h3 class="panel-title">
                                        <a role="button" data-toggle="collapse" data-parent="#accordion1"
                                           href="#collapseJan" aria-expanded="true"
                                           aria-controls="collapseOne">
                                            <em>  Ianuarie </em></a>
                                    </h3>
                                    </div>

                                <div id="collapseJan" class="panel-collapse collapse"
                                     role="tabpanel" aria-labelledby="headingOne">
                                    {% for article in articles if article.ArticleDate|date('M') == 'Jan' %}
                                    <a href="{{ path('grunt', {'pagina': article.postCategory, 'id' : article.id }) }}" >
                                    <div class="panel-body">
                                        <em>Din: </em><stronger>{{ article.ArticleDate|date('Y d M') }} </stronger></br>
                                        <em>Despre: </em><strong>{{ article.PostTitle }} </strong></br>
                                        <em>In categoria: </em><strong>{{ article.PostCategory }} </strong></br>
                                    </div>
                                    </a>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </li>

                    <li class="response">
                        <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                            <div class="panel panel-default">
                                <div class="panel-heading" role="tab" id="headingOne">
                                    <h3 class="panel-title">
                                        <a role="button" data-toggle="collapse" data-parent="#accordion1"
                                           href="#collapseFeb" aria-expanded="true"
                                           aria-controls="collapseOne">
                                            <em>  Februarie </em></a>
                                    </h3>
                                </div>

                                <div id="collapseFeb" class="panel-collapse collapse"
                                     role="tabpanel" aria-labelledby="headingOne">
                                    {% for article in articles if article.ArticleDate|date('M') == 'Feb' %}
                                        <a href="{{ path('grunt', {'pagina': article.postCategory, 'id' : article.id }) }}" >
                                            <div class="panel-body">
                                                <em>Din: </em><stronger>{{ article.ArticleDate|date('Y d M') }} </stronger></br>
                                                <em>Despre: </em><strong>{{ article.PostTitle }} </strong></br>
                                                <em>In categoria: </em><strong>{{ article.PostCategory }} </strong></br>
                                            </div>
                                        </a>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </li>

                </ul>
            </div>
        </div>

                <div class="navigation">
                    {{ knp_pagination_render(Main) }}
                </div>

            {%  endif %}
{% endblock %}