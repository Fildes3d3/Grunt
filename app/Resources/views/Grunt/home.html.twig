{% extends '::base.html.twig' %}
{% block body %}
{{ parent() }}
    {% for flashMessage in app.session.flashbag.get('succes') %}
        <div class="panel-heading">
            <div class="alert alert-success alert-dismissable" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                    <h2>{{ flashMessage }}</h2>
            </div>
        </div>
    {% endfor %}
        <div class="row">
            {% if app.request.attributes.get('_route') == 'security_login'%}
            {% else %}
            <div class="col-md-3">
            {% for articleMain in Main %}
                <h3>{{ articleMain.PostTitle }}</h3>
                <div class="media">
                    <div class="media-body">
                        <p><em>{{ articleMain.postData|truncate(400, true)|raw }}</em></p>
                        <p><em><strong>Scris maiastru in anul domnului: {{ articleMain.ArticleDate|date('Y') }}</strong></em></p>
                        <a href="{{ path('grunt', {'page' : articleMain.postCategory, 'id' : articleMain.id }) }}"
                           class="btn btn-info" > Citeste mai departe...</a>
                    </div>
                </div>
            {% endfor %}
            </div>
            <div class="col-md-3">
            {% for articleSide in Side %}
                <h3>{{ articleSide.PostTitle }}</h3>
                <div class="media">
                    <div class="media-body">
                        <p><em>{{ articleSide.postData|truncate(400, true)|raw }}</em></p>
                        <p><em><strong>Scris maiastru in anul domnului: {{ articleSide.ArticleDate|date('Y') }}</strong></em></p>
                        <a href="{{ path('grunt', {'page' : articleSide.postCategory, 'id' : articleSide.id }) }}" class="btn btn-info"> Citeste mai departe...</a>
                    </div>
                </div>
            {% endfor %}
            </div>
            <div class="col-md-3">
            {% for articleAside in Aside %}
                <h3>{{ articleAside.PostTitle }}</h3>
                <div class="media">
                    <div class="media-body">
                        <p><em>{{ articleAside.postData|truncate(400, true)|raw }}</em></p>
                        <p><em><strong>Scris maiastru in anul domnului: {{ articleAside.ArticleDate|date('Y') }}</strong></em></p>
                        <a href="{{ path('grunt', {'page' : articleAside.postCategory, 'id' : articleAside.id }) }}" class="btn btn-info">Citeste mai departe...</a>
                    </div>
                </div>
            {% endfor %}
            </div>
            <div class="col-md-3" id="side_main">
                <h2>Arhiva</h2>
            {% for article in article %}
                <ul>
                    <a href="{{ path('grunt', {'page': article.postCategory, 'id' : article.id }) }}" >
                    <li>
                        <em>Din: </em><stronger>{{ article.ArticleDate|date('Y d M') }} </stronger></br>
                        <em>Despre: </em><strong>{{ article.PostTitle }} </strong></br>
                        <em>In categoria: </em><strong>{{ article.PostCategory }} </strong></br>
                    </li>
                    </a>
                </ul>
            {% endfor %}
            </div>
        </div>
            {%  endif %}
{% endblock %}