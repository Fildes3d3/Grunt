{% extends '::base.html.twig' %}
{% block body %}
    {{ parent() }}
        {% for flashMessage in app.session.flashbag.get('succes') %}
            <div class="panel-heading">
                <div class="alert alert-success alert-dismissable" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h2>{{ flashMessage }}</h2>
                </div>
            </div>
        {% endfor %}
        <div class="row">
    {% if app.request.attributes.get('_route') == 'security_login'%}

    {% else %}
            <div class="col-md-4">
                {% for articleMain in Main %}
                <h3>Ultimele Articole </h3>
                <div class="media">
                    <button type="button" class="img-thumbnail pull-left" data-toggle="modal" data-target="#picmodal">
                        <img src="{{ asset ('upload/' ~ articleMain.Picture) }}" alt="broken tengai fairing" />
                    </button>

                    <div class="modal fade" role="dialog" aria-hidden="true" id="picmodal">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                    <h4 class="modal-title" id="myModalLabel">Carena Tengai Sparta</h4>
                                </div>
                                <div class="modal-body">
                                    <img src="{{ asset ('upload/' ~ articleMain.Picture) }}" alt="broken tengai fairing" />
                                </div>
                                <div class="modal-footer">
                                    <h5><em>...sau de ce nu e bine sa mergi noaptea prin padure...</em></h5>
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="media-body">
                        <p><em>{{ articleMain.postData|truncate(400, true) }}</em></p>
                        <p><em><strong>Scris maiastru in anul domnului: {{ articleMain.ArticleDate|date('Y') }}</strong></em></p>
                        <a href="{{ path ('grunt_garaj') }}" class="btn btn-info">Citeste mai departe...</a>
                    </div>
                </div>
                {% endfor %}
            </div>

            <div class="col-md-4">
                {% for articleSide in Side %}
                <h3>Ultimele Articole Jurnal de Bord</h3>
                <div class="media">
                    <button type="button" class="img-thumbnail pull-left" data-toggle="modal" data-target="#picmodal1">
                        <img src="{{ asset ('upload/' ~ articleSide.Picture) }}" alt="campenesti cluj" />
                    </button>

                    <div class="modal fade" role="dialog" aria-hidden="true" id="picmodal1">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                    <h4 class="modal-title" id="myModalLabel">Campenesti Cluj</h4>
                                </div>
                                <div class="modal-body">
                                    <img src="{{ asset ('upload/' ~ articleSide.Picture) }}" alt="campenesti cluj" />
                                </div>
                                <div class="modal-footer">
                                    <h5><em>...din fata blocului...<strong>Campenesti Cluj</strong>...</em></h5>
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="media-body">
                        <p><em>{{ articleSide.postData|truncate(400, true) }}</em></p>
                        <p><em><strong>Scris maiastru in anul domnului: {{ articleSide.ArticleDate|date('Y') }}</strong></em></p>
                        <a href="{{ path ('grunt_jurnal') }}" class="btn btn-info"> Citeste mai departe...</a>
                    </div>
                </div>
                {% endfor %}
            </div>

            <div class="col-md-4">
                {% for articleAside in Aside %}
                <h3>Ultimele Articole DYI</h3>
                <div class="media">
                    <button type="button" class="img-thumbnail pull-left" data-toggle="modal" data-target="#picmodal">
                        <img src="{{ asset ('upload/' ~ articleAside.Picture) }}" alt="broken tengai fairing" />
                    </button>

                    <div class="modal fade" role="dialog" aria-hidden="true" id="picmodal">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                    <h4 class="modal-title" id="myModalLabel">Carena Tengai Sparta</h4>
                                </div>
                                <div class="modal-body">
                                    <img src="{{ asset ('upload/' ~ articleAside.Picture) }}" alt="broken tengai fairing" />
                                </div>
                                <div class="modal-footer">
                                    <h5><em>...sau de ce nu e bine sa mergi noaptea prin padure...</em></h5>
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="media-body">
                        <p><em>{{ articleAside.postData|truncate(400, true) }}</em></p>
                        <p><em><strong>Scris maiastru in anul domnului: {{ articleAside.ArticleDate|date('Y') }}</strong></em></p>
                        <a href="{{ path ('grunt_diy') }}" class="btn btn-info">Citeste mai departe...</a>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    {%  endif %}
        <div class="row">
            <div class="col-md-12" id="footer">
                Copyright 2016. FildEs Flight Co.
            </div>
        </div>
    </div>
{% endblock %}