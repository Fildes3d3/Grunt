{% extends '::base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="jumbotron">
            <h1>The Daily Grunt Post Management</h1>
            <div class="row">
                <div class="col-md-6">
                    <form>
                        <label for="dropdown"><h3>Selecteaza Categoria pentru Post...</h3></label>
                        <select class="form-control" id="dropdown" name="dropdown" onchange="showTab();">
                            <option value="garaj">Postare Garaj</option>
                            <option value="jurnal">Postare Jurnal</option>
                            <option value="diy">Postare DiY</option>
                        </select>
                    </form>
                </div>
            </div>
        </div>
        <div class="panel panel-default" id="garaj">
            <div class="panel-heading">
                <h3>Posteaza Articol Garaj</h3>
            </div>
            <div class="panel-body">
                <form>
                    <div class="row">
                        <div class="col-md-6 padding-top-10">
                            <label for="coment-title" class="control-label"> Titlu Postare Garaj </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 padding-top-10">
                            <input type="text" class="form-control" id="post-title" placeholder="Despre ce scriem astazi..." />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 padding-top-10">
                            <label for="coment-body" class="control-label"> Detaliaza...</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 padding-top-10">
                            <textarea rows="5" type="text" class="form-control" id="post-body" placeholder="Detaliaza Povestea"></textarea>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-xs-2 padding-top-10">
                            <button class="btn btn-info">Posteaza</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="panel panel-default hidden" id="jurnal">
            <div class="panel-heading">
                <h3>Posteaza Articol Jurnal</h3>
            </div>
            <div class="panel-body">
                <form>
                    <div class="row">
                        <div class="col-md-6 padding-top-10">
                            <label for="coment-title" class="control-label"> Titlu Postare Jurnal </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 padding-top-10">
                            <input type="text" class="form-control" id="post-title" placeholder="Despre ce scriem astazi..." />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 padding-top-10">
                            <label for="coment-body" class="control-label"> Detaliaza...</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 padding-top-10">
                            <textarea rows="5" type="text" class="form-control" id="post-body" placeholder="Detaliaza Povestea"></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-2 padding-top-10">
                            <button class="btn btn-info">Posteaza</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="panel panel-default hidden" id="diy">
            <div class="panel-heading">
                <h3>Posteaza Articol DYI</h3>
            </div>
            <div class="panel-body">
                <form>
                    <div class="row">
                        <div class="col-md-6 padding-top-10">
                            <label for="coment-title" class="control-label"> Titlu Postare DYI </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 padding-top-10">
                            <input type="text" class="form-control" id="post-title" placeholder="Despre ce scriem astazi..." />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 padding-top-10">
                            <label for="coment-body" class="control-label"> Detaliaza...</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 padding-top-10">
                            <textarea rows="5" type="text" class="form-control" id="post-body" placeholder="Detaliaza Povestea"></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-2 padding-top-10">
                            <button class="btn btn-info">Posteaza</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12" id="footer">
            Copyright 2015. FildEs Flight Co.
        </div>
    </div>

    <script>
        function showTab( ) {
            var select = $( '#dropdown' );
            $( 'div.panel' ).not( '#'+ select.val()).addClass('hidden');
            $( '#'+ select.val() ).removeClass('hidden');
        }
    </script>



{% endblock %}