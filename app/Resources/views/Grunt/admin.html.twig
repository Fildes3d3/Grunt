{% extends '::base.html.twig' %}
{% block body %}
<div class="container">
    <div class="jumbotron">
        <h1 class="text-right">The Daily Grunt</h1>
        <h1 class="text-right"> Post Management</h1>
    </div>
        <div class="panel-body">
        {%  if article is defined %}
            <div class="row">
                <div class="col-xs-6">
                    {{ form_start(articleForm) }}
                    {{ form_errors(articleForm) }}
                    {{ form_row(articleForm.postCategory, {'value' : article.postCategory}) }}
                    {{ form_row(articleForm.postTitle, {'value' : article.PostTitle }) }}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    {{ form_row(articleForm.postData, {'value' : article.postData}) }}
                    <button class="btn btn-info">Update</button>
                </div>
            </div>
            <div class="col-xs-6">
                <div class="hidden">
                    {{ form_row(articleForm.articleDate) }}
                </div>
                {{ form_end(articleForm) }}
            </div>
        {% else %}
            <div class="row">
                <div class="col-xs-6">
                    {{ form_start(articleForm) }}
                    {{ form_row(articleForm.postCategory) }}
                    {{ form_row(articleForm.postTitle) }}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    {{ form_row(articleForm.postData) }}
                    <button class="btn btn-info">Posteaza</button>
                </div>
            </div>
            <div class="col-xs-6">
                <div class="hidden">
                    {{ form_row(articleForm.articleDate) }}
                </div>
                    {{ form_end(articleForm) }}
            </div>
        {% endif %}
        </div>
 {% endblock %}