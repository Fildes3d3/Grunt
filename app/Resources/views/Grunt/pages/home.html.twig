{% extends '::base.html.twig' %}

{% block mainContent %}

    {% for flashMessage in app.session.flashbag.get('succes') %}
        <div class="panel-heading">
            <div class="alert alert-success alert-dismissable" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                <h2>{{ flashMessage }}</h2>
            </div>
        </div>
    {% endfor %}
    <div class="container">
        <div class="row">
            {% if app.request.attributes.get('_route') != 'security_login'%}
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    {% for articleMain in Main %}
                        <div class="post-preview">
                            <h2 class="post-title">
                                {{ articleMain.PostTitle }}
                            </h2>
                            <h4 class="post-subtitle">
                                {{ articleMain.postData|truncate(400, true)|raw }}
                            </h4>
                            <p>
                                <a href="{{ path('grunt', {'pagina' : articleMain.postCategory, 'id' : articleMain.id }) }}">
                                    <button class="btn btn-default">mai mult</button>
                                </a>
                            </p>
                            <p class="post-meta">Scris maiastru in anul domnului: {{ articleMain.ArticleDate|date('Y M') }}</p>
                        </div>
                        <hr>
                    {% endfor %}
                    <div id="home-pagination">
                        {{ knp_pagination_render(Main) }}
                    </div>
                </div>
            {%  endif %}
        </div>
    </div>

    <hr>

{% endblock mainContent %}


