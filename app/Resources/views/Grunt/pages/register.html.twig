{% extends '::base.html.twig' %}

{% block mainContent %}

        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <p>Inregistrare Utilizator</p>
                    {% for flashMessage in app.session.flashbag.get('notice') %}
                        <div class="panel-heading">
                            <div class="alert alert-warning alert-dismissable" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h2>{{ flashMessage }}</h2>
                            </div>
                        </div>
                    {% endfor %}
                    <form method="post" id="registerform" name="registerform" enctype="multipart/form-data" action="{{ path('grunt_register') }}">
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label>Nume Utilizator</label>
                                <input type="text" class="form-control" id="username" name="_username" placeholder=" Nume Utilizator" >
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label>eMail</label>
                                <input type="email" class="form-control" id="email" name="email" placeholder=" eMail">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label>Parola</label>
                                <input type="password" class="form-control" id="password" name="_unsafePassword" placeholder=" Parola">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label>Reintroduceti Parola</label>
                                <input type="password" class="form-control" id="confirmpassword" name="confirmPassword" placeholder=" Reintroduceti Parola" >
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        {#<div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label for="news" class="control-label">Click pentru abonare la newsletter.</label>
                                <input type="checkbox" id="news" name="news" value="yes"/> Click pentru abonare la newsletter.
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>#}

                        <br>
                        <div id="success"></div>
                        <div class="row">
                            <div class="form-group col-xs-12">
                                <button type="submit" class="btn btn-default">Salveaza Utilizator</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

{% endblock mainContent %}

