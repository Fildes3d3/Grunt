{% extends '::base.html.twig' %}
{% block body %}
{{ parent() }}
<div class="row">
    {{ form_start(userForm) }}
    {{ form_errors(userForm) }}
    <div class="col-md-4">
        <div class="thumbnail">
            <img src="{{ user.picture }}">
            <div class="caption">
                <div class="row">
                    <div class="col-md-7">
                    <button class="btn btn-success"  data-toggle="collapse" data-parent="#accordion"
                       href="#pict" aria-expanded="true" aria-controls="pict">Schimba Foto
                    </button>
                    </div>
                    <div class="col-md-5">
                        <button id="deletepic" class="btn btn-danger" > Sterge Foto </button>
                    </div>
                </div>
                <div class="row">
                    <div id="pict" class="panel-collapse collapse col-md-6"
                            role="tabpanel" aria-labelledby="headingOne">
                        {{ form_row(userForm.picture) }}
                        <button type="submit" class="btn btn-info">OK</button>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-8" style="float: right">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Informatii despre matale:</h2>
            </div>
            <div class="panel-body">
                <table class="table table-responsive table-hover" id="user_table">
                    <tr>
                        <th><em>Nume Utilizator:</em> </th>
                        <td>{{ user.username }}</td>
                        <td>  <a role="button" data-toggle="collapse" data-parent="#accordion"
                                 href="#UserName" aria-expanded="true"
                                 aria-controls="UserName">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                        </td>
                        <td id="UserName" class="panel-collapse collapse"
                            role="tabpanel" aria-labelledby="headingOne">
                            {{ form_row(userForm.username, {'value': user.username}) }}
                        </td>

                    </tr>
                    <tr>
                        <th><em>eMail Utilizator:</em> </th>
                        <td>{{ user.email }}</td>
                        <td>
                            <a role="button" data-toggle="collapse" data-parent="#accordion"
                               href="#Email" aria-expanded="true"
                               aria-controls="Email">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                        </td>
                        <td id="Email" class="panel-collapse collapse"
                            role="tabpanel" aria-labelledby="headingTwo">
                            {{ form_row(userForm.email, {'value': user.email}) }}
                        </td>
                    </tr>
                    <tr>
                        <th><em>Abonat News:</em> </th>
                        <td>{{ user.news ? 'Da' : 'Nu' }}</td>
                        <td>
                            <a role="button" data-toggle="collapse" data-parent="#accordion"
                               href="#News" aria-expanded="true"
                               aria-controls="News">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                        </td>
                        <td id="News" class="panel-collapse collapse"
                            role="tabpanel" aria-labelledby="headingThree">
                            {{ form_row(userForm.news, {'value': user.news}) }}
                        </td>
                    </tr>
                    <tr>
                        <th><em>Drepturi:</em> </th>
                        <td>
                            {% if user.Roles|json_encode == '["ROLE_USER"]' %}
                                ...mai deloc...
                            {% elseif user.Roles|json_encode == '["ROLE_ADMIN","ROLE_USER"]' %}
                                ...cat de cat...
                            {% elseif user.Roles|json_encode == '["ROLE_ADMIN","ROLE_BOSS","ROLE_USER"]'%}
                                GOD
                            {% endif %}
                        </td>
                        <td>
                            <a href="#">
                            </a>
                        </td>
                    </tr>
                </table>
                <button type="submit" class="btn btn-info">Posteaza</button>
                {{ form_end(userForm) }}
            </div>
        </div>
    </div>

</div>
{% endblock %}